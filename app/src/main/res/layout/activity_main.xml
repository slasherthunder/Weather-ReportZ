<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:background="@drawable/background">

        <androidx.camera.view.PreviewView
            android:visibility="invisible"
            android:id="@+id/CAMERAAHHHH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:scaleType="fitXY"
            android:padding="0dp"/>

        <!-- Settings Panel (initially hidden) -->
        <LinearLayout
            android:id="@+id/settingsPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#000300"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            android:elevation="8dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="24sp"
                android:textColor="#C3C1C1"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Temperature Unit Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature Unit"
                android:textSize="16sp"
                android:textColor="#C3C1C1"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioGroup
                    android:id="@+id/tempUnitGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_celsius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Celsius"
                        android:textColor="#FFFFFF"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/radio_fahrenheit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#FFFFFF"
                        android:text="Fahrenheit"/>

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humidity And Wind Speed"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/switch_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Humidity"
                    android:textColor="#FFFFFF"
                    android:checked="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <Switch
                    android:id="@+id/switch_wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Wind Speed"
                    android:textColor="#FFFFFF"
                    android:checked="true"/>
            </LinearLayout>

            <!-- Close Button -->
            <Button
                android:id="@+id/btn_close_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Close Settings"
                android:layout_marginTop="16dp"
                android:backgroundTint="#C3C1C1"
                android:textColor="#000500"/>

            <!-- New Guide Button -->
            <Button
                android:id="@+id/btn_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Guide"
                android:layout_marginTop="16dp"
                android:backgroundTint="#C3C1C1"
                android:textColor="#000500"
                android:layout_marginBottom="16dp"/>

            <!-- Extra space to ensure the guide button is off-screen initially -->
            <View
                android:layout_width="match_parent"
                android:layout_height="400dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/cityNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City Name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/currentWeatherLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Weather Today"
            android:layout_below="@id/cityNameText"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/weatherIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/currentWeatherLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="12dp"
            android:src="@drawable/ic_storm"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:contentDescription="Weather Icon" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weatherIcon"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="Storm"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/descriptionText"
            android:background="@drawable/background2"
            android:padding="10dp">

            <!-- Humidity -->
            <LinearLayout
                android:id="@+id/humidityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/humidityIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_half_humidity"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:contentDescription="Humidity"/>

                <TextView
                    android:id="@+id/humidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Temperature -->
            <LinearLayout
                android:id="@+id/temperatureLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tempIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/thermometer"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:contentDescription="Temperature"/>

                <TextView
                    android:id="@+id/temperatureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25°"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Wind -->
            <LinearLayout
                android:id="@+id/windLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/windIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_windspeed"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:contentDescription="Wind"/>

                <TextView
                    android:id="@+id/windText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 km/h"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <androidx.camera.view.PreviewView
            android:visibility="invisible"
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/cityNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailsLayout"
            android:textColor="#FFFAFA"
            android:padding="12dp"
            android:textColorHint="#FFFAFA"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:hint="Enter City Name" />

        <Button
            android:id="@+id/fetchWeatherButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityNameInput"
            android:backgroundTint="#2B3A67"
            android:text="Change City"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <!-- 7-Day Forecast Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fetchWeatherButton"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/background2"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week's Forecast"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <!-- Monday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <ImageButton
                        android:id="@+id/mondayButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sunny"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:contentDescription="Monday weather"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72°F"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Tuesday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tue"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                    <ImageButton
                        android:id="@+id/tuesdayButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/cloudwithsun"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:contentDescription="Tuesday weather"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69°F"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Wednesday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wed"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <ImageButton
                        android:id="@+id/wednesdayButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sunny"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:contentDescription="Wednesday weather"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85°F"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Thursday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <ImageButton
                        android:id="@+id/thursdayButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sunny"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:contentDescription="Thursday weather"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90°F"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Friday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fri"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <ImageButton
                        android:id="@+id/fridayButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/cloudwithsun"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:contentDescription="Friday weather"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70°F"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Saturday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sat"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <ImageButton
                        android:id="@+id/saturdayButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/cloudwithsun"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:contentDescription="Saturday weather"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69°F"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Sunday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sun"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <ImageButton
                        android:id="@+id/sundayButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/cloudwithsun"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:contentDescription="Sunday weather"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69°F"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>